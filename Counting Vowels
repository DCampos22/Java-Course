public class Project1 {

	public static void main(String[] args) {
		
		int vowel_A = 0, vowel_E = 0, vowel_I = 0, vowel_O = 0, vowel_U = 0; 
		//initialize counters
		
		String file = "src/input.txt";
		TextFileInput in = new TextFileInput(file);
		//bring input file
		
		String line;
		String lines = " ";
		//holds text from the file
		
		int myArraySize = 19;
		//size of array of file
		String[] wordArray = new String[myArraySize];
		
		line = in.readLine();
		//read first word from input file
		int j = 0; 
		//record the index of the word is being read
		while(line != null) {
			//reading lines until null
			wordArray[j] = line;
			line = in.readLine();
			lines += line;
			j++;
		}
		for(int i = 0; i < lines.length()-1; i++) {
			//adds vowels of the "lines" (input.txt)
			if(lines.charAt(i) =='a' || lines.charAt(i) == 'A')
					vowel_A++;
			if(lines.charAt(i) == 'e' || lines.charAt(i) == 'E')
					vowel_E++;
			if(lines.charAt(i) == 'i' || lines.charAt(i) == 'I')
					vowel_I++;
			if(lines.charAt(i) == 'o' || lines.charAt(i) == 'O')
					vowel_O++;
			if(lines.charAt(i) == 'u' || lines.charAt(i) == 'U')
					vowel_U++;
			}//for
			int paragraph = wordArray.length;
			
		VowelGUI Vowels = new VowelGUI();
		//access vowelGUI to manipulate
		VowelGUI.printToJFrame(Vowels, wordArray, paragraph, vowel_A, vowel_E, vowel_I, vowel_O, vowel_U);
		//passes values to methods from VowelGUI
		}//main

	}


